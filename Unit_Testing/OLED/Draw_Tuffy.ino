void drawTuffy(void) {
  display.clearDisplay();
  display.drawBitmap(0, 11, myBitmap, LOGO_WIDTH, LOGO_HEIGHT, 1);
  display.setTextSize(2);
  display.setTextColor(SSD1306_WHITE);
  display.setCursor(1, 0);
  display.print("Tuffy V1.0");
  display.display();
}
